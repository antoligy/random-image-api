{
  "name": "random-image-api",
  "author": "Alex Wilson <a@ax.gy>",
  "license": "ISC",
  "scripts": {
    "start": "node main",
    "start-dev": "nodemon main -w src",
    "test": "xo && ava"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "v5.0.0-alpha.5",
    "express-handlebars": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonschema": "^1.2.4",
    "morgan": "^1.8.2",
    "msgpack-lite": "^0.1.26",
    "redis": "^2.7.1",
    "type-is": "^1.6.15",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "winston-papertrail": "^1.0.5"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "eslint-config-prettier": "^1.7.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0",
    "xo": "^0.18.1"
  },
  "ava": {
    "failFast": true,
    "files": [
      "test/*",
      "test/middleware/*",
      "!test/*_fixtures"
    ]
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "rules": {
      "no-unused-vars": [
        2,
        {
          "args": "after-used",
          "argsIgnorePattern": "^_$"
        }
      ]
    },
    "ignores": [
      "main.js"
    ]
  }
}
